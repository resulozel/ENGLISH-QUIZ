<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:background="#FFE87C">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">




      <android.support.v7.widget.CardView
          android:layout_marginTop="30dp"
          android:layout_width="match_parent"
          android:layout_height="200dp"
          card_view:cardBackgroundColor="@color/cardview_light_background"
          card_view:cardCornerRadius="10dp"
          card_view:cardElevation="8dp"

          >
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical">



            <ImageView
                android:paddingTop="10dp"
                android:id="@+id/sayilar_image_view2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/alettt"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:text="Malzeme Testine Başla!"
                android:textColor="@color/siyah"
                android:textSize="25dp"
                android:gravity="center"/>

         </LinearLayout>

      </android.support.v7.widget.CardView>

      <ImageButton
          android:id="@+id/fab2"
          android:onClick="testClick"
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:src="@android:drawable/ic_media_play"
          android:elevation="12dp"
          android:layout_marginTop="-25dp"
          android:background="@drawable/selector_mor"
          android:layout_marginRight="40dp"
          android:layout_gravity="end"

          />


      <android.support.v7.widget.CardView
          android:layout_marginTop="30dp"
          android:layout_width="match_parent"
          android:layout_height="200dp"
          card_view:cardBackgroundColor="@color/cardview_light_background"
          card_view:cardCornerRadius="10dp"
          card_view:cardElevation="8dp"

          >
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical">



            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/sayilar_image_view3"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/animals"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:text="Fiiller testine Başla!"
                android:textColor="@color/siyah"
                android:textSize="25dp"
                android:gravity="center"/>

         </LinearLayout>

      </android.support.v7.widget.CardView>

      <ImageButton
          android:id="@+id/fab3"
          android:onClick="testClick"
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:src="@android:drawable/ic_media_play"
          android:elevation="12dp"
          android:layout_marginTop="-25dp"
          android:background="@drawable/selector_kirmizi"
          android:layout_marginRight="40dp"
          android:layout_gravity="end"
          android:layout_marginBottom="10dp"
          />


      <android.support.v7.widget.CardView
          android:layout_marginTop="30dp"
          android:layout_width="match_parent"
          android:layout_height="200dp"
          card_view:cardBackgroundColor="@color/cardview_light_background"
          card_view:cardCornerRadius="10dp"
          card_view:cardElevation="8dp"

          >
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical">



            <ImageView
                android:paddingTop="10dp"
                android:id="@+id/sayilar_image_view4"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/fruits"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:text="Sebze ve Meyve Testine Başla"
                android:textColor="@color/siyah"
                android:textSize="25dp"
                android:gravity="center"/>

         </LinearLayout>

      </android.support.v7.widget.CardView>

      <ImageButton
          android:id="@+id/fab4"
          android:onClick="testClick"
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:src="@android:drawable/ic_media_play"
          android:elevation="12dp"
          android:layout_marginTop="-25dp"
          android:background="@drawable/selector_mor"
          android:layout_marginRight="40dp"
          android:layout_gravity="end"

          />

      <android.support.v7.widget.CardView
          android:layout_marginTop="30dp"
          android:layout_width="match_parent"
          android:layout_height="200dp"
          card_view:cardBackgroundColor="@color/cardview_light_background"
          card_view:cardCornerRadius="10dp"
          card_view:cardElevation="8dp"

          >
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical">



            <ImageView
                android:paddingTop="10dp"
                android:id="@+id/sayilar_image_view5"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/jobs"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:text="Meslekler Testine Başla!"
                android:textColor="@color/siyah"
                android:textSize="25dp"
                android:gravity="center"/>

         </LinearLayout>

      </android.support.v7.widget.CardView>

      <ImageButton
          android:id="@+id/fab5"
          android:onClick="testClick"
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:src="@android:drawable/ic_media_play"
          android:elevation="12dp"
          android:layout_marginTop="-25dp"
          android:background="@drawable/selector_mor"
          android:layout_marginRight="40dp"
          android:layout_gravity="end"

          />

       <android.support.v7.widget.CardView
           android:layout_marginTop="30dp"
           android:layout_width="match_parent"
           android:layout_height="200dp"
           card_view:cardBackgroundColor="@color/cardview_light_background"
           card_view:cardCornerRadius="10dp"
           card_view:cardElevation="8dp"

           >
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical">



               <ImageView
                   android:paddingTop="10dp"
                   android:id="@+id/sayilar_image_view6"
                   android:layout_width="match_parent"
                   android:layout_height="100dp"
                   android:src="@drawable/adverb"/>

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:paddingTop="20dp"
                   android:text="Zarflar Testine Başla!"
                   android:textColor="@color/siyah"
                   android:textSize="25dp"
                   android:gravity="center"/>

           </LinearLayout>

       </android.support.v7.widget.CardView>

       <ImageButton
           android:id="@+id/fab6"
           android:onClick="testClick"
           android:layout_width="50dp"
           android:layout_height="50dp"
           android:src="@android:drawable/ic_media_play"
           android:elevation="12dp"
           android:layout_marginTop="-25dp"
           android:background="@drawable/selector_mor"
           android:layout_marginRight="40dp"
           android:layout_gravity="end"

           />




   </LinearLayout>




</ScrollView>
